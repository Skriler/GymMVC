@model Client
@{
    ViewData["Title"] = "Client details";
}

<div class="form-horizontal">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.FirstName)</b> <br />
        @Html.DisplayFor(model => model.ApplicationUser.FirstName)
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.LastName)</b> <br />
        @Html.DisplayFor(model => model.ApplicationUser.LastName)
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.BirthDate)</b> <br />
        @Model.ApplicationUser.BirthDate.ToString("yyyy-MM-dd")
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.Email)</b> <br />
        @Html.DisplayFor(model => model.ApplicationUser.Email)
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.PhoneNumber)</b> <br />
        @Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ApplicationUser.Gender.Title)</b> <br />
        @Html.DisplayFor(model => model.ApplicationUser.Gender.Title)
    </div>
    <br />
    <div>
        <b>@Html.LabelFor(model => model.ClientStatus.Title)</b> <br />
        @Html.DisplayFor(model => model.ClientStatus.Title)
    </div>
    <br />
    <div>
        @Html.ActionLink("Back to list", "Index", "Clients", null, new { @class = "btn btn-info" })
    </div>
</div>